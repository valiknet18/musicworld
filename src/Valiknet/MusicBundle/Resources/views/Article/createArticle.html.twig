{% extends '::base.html.twig' %}

{% trans_default_domain "article" %}

{% block title %}
    {{ "articles.titles.createArticle"|trans() }}
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <form action="#" method="POST" novalidate>
            <div class="col-lg-12">
                {{ form_row(form.name) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.text) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.groups) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.users) }}
            </div>

            <div class="col-lg-12">
                {{ form_rest(form) }}
            </div>

            <div class="col-lg-12">
                <button type="submit" class="btn btn-default">{{ "articles.form.buttonCreate"|trans() }}</button>
            </div>
        </form>
    </div>
{% endblock %}
