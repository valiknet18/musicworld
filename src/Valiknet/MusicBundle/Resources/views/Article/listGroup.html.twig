{% extends 'ValiknetMusicBundle:Article:article_webber.html.twig' %}

{% trans_default_domain "article" %}

{% block title %}
    {{ "articles.titles.groupsTitle"|trans({ "%articleName%" : article.name }) }}
{% endblock %}

{% block links %}
    <a href="{{ path('valiknet_home') }}">{{ "articles.articles"|trans() }}</a>><a href="{{ path('valiknet_article_view', {"slug" : article.slug}) }}">{{ article.name }}</a>><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">{{ "articles.navigator.groups"|trans() }}</a>
{% endblock %}

{% block article_content %}
    <div class="col-lg-12">
        {% include "@ValiknetMusic/Group/blocks/listGroups.html.twig" with {"groups" : groups} %}
    </div>
{% endblock %}
