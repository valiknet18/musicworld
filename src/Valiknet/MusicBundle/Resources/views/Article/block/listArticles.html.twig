{% trans_default_domain "article" %}

{% for article in articles %}
    <div class="col-lg-6 thumbnail">
        <h3 class="col-lg-12">
            {{ article.name }}
        </h3>

        <div class="col-lg-12">
            <p>
                {{ article.text|slice(0, 70) }}
            </p>
        </div>

        <div class="col-lg-12">
            <a href="{{ path('valiknet_article_view', {"slug" : article.slug}) }}" class="btn btn-success">
                {{ "articles.moveOn"|trans() }}
            </a>
        </div>
    </div>
{% else %}
    <div>
        <h4>
            {{ "articles.articlesNotIsset"|trans() }}
        </h4>
    </div>
{% endfor %}

<div class="col-lg-12">
    {{ knp_pagination_render(articles) }}
</div>
