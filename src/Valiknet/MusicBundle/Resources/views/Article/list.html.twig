{% extends '::base.html.twig' %}

{% block title %}
    Список статей
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            {% for article in articles %}
                <div class="col-lg-6 thumbnail">
                    <h3 class="col-lg-12">
                        {{ article.name }}
                    </h3>

                    <div class="col-lg-12">
                        <p>
                            {{ article.text|slice(0, 70) }}
                        </p>
                    </div>

                    <div class="col-lg-12">
                        <a href="{{ path('valiknet_article_view', {"slug" : article.slug}) }}" class="btn btn-success">
                            Перейти
                        </a>
                    </div>
                </div>
            {% endfor %}

            <div class="col-lg-12">
                {{ knp_pagination_render(articles) }}
            </div>
        </div>
    </div>
{% endblock %}
