{% extends '::base.html.twig' %}

{% block title %}
    Обновлення статі {{ article.name }}
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <form action="#" method="POST">
            <div class="col-lg-12">
                {{ form_row(form.name) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.text) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.groups) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.users) }}
            </div>

            <div class="col-lg-12">
                {{ form_rest(form) }}
            </div>

            <div class="col-lg-12">
                <button type="submit" class="btn btn-default">Обновлення</button>
            </div>
        </form>
    </div>
{% endblock %}
