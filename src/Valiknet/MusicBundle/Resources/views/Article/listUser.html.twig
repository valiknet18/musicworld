{% extends 'ValiknetMusicBundle:Article:article_webber.html.twig' %}

{% block title %}
    {{ "articles.titles.usersTitle"|trans() }} {{ article.name }}
{% endblock %}

{% block links %}
    <a href="{{ path('valiknet_home') }}">{{ "articles.articles"|trans() }}</a>><a href="{{ path('valiknet_article_view', {"slug" : article.slug}) }}">{{ article.name }}</a>><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">{{ "articles.navigator.users"|trans() }}</a>
{% endblock %}

{% block article_content %}
    <div class="col-lg-12">
        {% for user in article.users %}
            <div class="col-lg-6 thumbnail">
                <h4 class="col-lg-12">
                    {{ user.name }} {{ user.lastname }}
                </h4>

                <div class="col-lg-4">
                    <img src="#" class="mini-poster" />
                </div>

                <div class="col-lg-8 characters">
                    <div class="col-lg-12">
                        Країна: <a href="{{ path('valiknet_country_user_view', {"slug" : user.country.slug}) }}">{{ user.country.name }}</a>
                    </div>

                    <div class="col-lg-12">
                        Дата народення: {{ user.birthedAt|date('d.m.Y') }}
                    </div>
                </div>

                <div class="col-lg-12">
                    <a href="{{ path('valiknet_user_view', {"slug" : user.slug}) }}" class="btn btn-success">
                        Перейти
                    </a>
                </div>
            </div>
        {% else %}
            <div>
                <h4>
                    До цієї статі не прив’язана ні одна группа
                </h4>
            </div>
        {% endfor %}
    </div>
{% endblock %}
