{% extends '::base.html.twig' %}

{% trans_default_domain "article" %}

{% block content %}
    <div class="row col-lg-10 col-lg-offset-1">
        <nav class="navbar navbar-inverse">
            <ul class="nav navbar-nav">
                <li>
                    <a href="{{ path('valiknet_article_view', {"slug" : article.slug}) }}">
                        {{ "articles.navigator.mainInformation"|trans() }}
                    </a>
                </li>

                <li>
                    <a href="{{ path('valiknet_article_group_list', {"slug" : article.slug}) }}">
                        {{ "articles.navigator.groups"|trans() }} <span class="badge">{{ article.groups|length }}</span>
                    </a>
                </li>

                <li>
                    <a href="{{ path('valiknet_article_user_list', {"slug" : article.slug}) }}">
                        {{ "articles.navigator.users"|trans() }} <span class="badge">{{ article.users|length }}</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="col-lg-12 arrow-navigator">
            {% block links %}
            {% endblock %}
        </div>

        <div>
            {% block article_content %}
            {% endblock %}
        </div>
    </div>
{% endblock %}
