{% extends 'ValiknetMusicBundle:Group:group_webber.html.twig' %}

{% trans_default_domain "group" %}

{% block title %}
    {{ "groups.title.aboutGroup"|trans({"%groupName%" : group.name}) }}
{% endblock %}

{% block links %}
    {{ wo_render_breadcrumbs() }}
{% endblock %}

{% block group_content %}
    <div class="col-lg-2 col-lg-offset-10">
        <a href="{{ path('valiknet_group_update', {"slug" : group.slug}) }}">{{ "groups.updateGroup"|trans() }}</a>
    </div>

    <div class="col-lg-12">
        <div class="col-lg-4">
            <img src="{{ asset(group.webPath|valiknet_image()|imagine_filter('thumb250')) }}" class="poster"/>
        </div>

        <div class="col-lg-8 characters">
            <div class="col-lg-12">
                {{ "groups.group.country"|trans() }}: <a href="{{ path('valiknet_country_group_view', {"slug" : group.country.slug}) }}">{{ group.country.name }}</a>
            </div>

            <div class="col-lg-12">
                {{ "groups.group.styles"|trans() }}:

                {% for style in group.styles %}
                    <a href="#">{{ style.name }}</a>
                {% endfor %}
            </div>

            <div class="col-lg-12">
                {{ "groups.group.createdAt"|trans() }}: {{ group.createdAt|date('Y') }}
            </div>
        </div>

        <div class="col-lg-8">
            <h4>{{ "groups.group.shortlyHistory"|trans() }}:</h4>
            <p>
                {{ group.history }}
            </p>
        </div>
    </div>
{% endblock %}
