{% extends 'ValiknetMusicBundle:Group:group_webber.html.twig' %}

{% trans_default_domain "group" %}

{% block title %}
    {{ "groups.title.newsGroup"|trans({ "%groupName%" : group.name }) }}
{% endblock %}

{% block links %}
    <a href="{{ path('valiknet_group_list') }}">{{ "groups.groups"|trans() }}</a>><a href="{{ path("valiknet_group_view", { "slug" : group.slug }) }}">{{ group.name }}</a>><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">{{ "groups.navigator.news"|trans() }}</a>
{% endblock %}

{% block group_content %}
    <div class="col-lg-12">
        {% include "@ValiknetMusic/Article/block/listArticles.html.twig" with {"articles" : articles} %}
    </div>
{% endblock %}
