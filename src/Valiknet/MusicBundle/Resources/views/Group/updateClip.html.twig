{% extends '::base.html.twig' %}

{% trans_default_domain "group" %}

{% block title %}
    Обновлення кліпу {{ clip.name }} групи {{ group.name }}
    {{ "groups.title.updateGroup"|trans({ "clipName" : clip.name, "groupName" : group.name }) }}
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <form action="#" method="POST">
            <div class="col-lg-12">
                {{ form_row(form.name) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.text) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.video) }}
            </div>

            <div class="col-lg-12">
                {{ form_rest(form) }}
            </div>

            <div class="col-lg-12">
                <button type="submit" class="btn btn-default">{{ "groups.form.updateButton"|trans() }}</button>
            </div>
        </form>
    </div>
{% endblock %}
