{% extends 'ValiknetMusicBundle:Group:group_webber.html.twig' %}

{% trans_default_domain "group" %}

{% block title %}
    {{ "groups.title.clipsGroup"|trans({"%groupName%" : group.name}) }}
{% endblock %}

{% block links %}
    {{ wo_render_breadcrumbs() }}
{% endblock %}

{% block group_content %}
    <div class="col-lg-2 col-lg-offset-10">
        <a href="{{ path('valiknet_group_clip_add', {"slug" : group.slug}) }}">{{ "groups.clips.createClip"|trans() }}</a>
    </div>

    <div class="col-lg-12">
        {% for clip in group.clips %}
            <div class="col-lg-12">
                <a href="{{ path('valiknet_group_clip_view', { "slug" : group.slug, "slugClip" : clip.slug }) }}">{{ clip.name }}</a>
            </div>
        {% else %}
            <h4>В цій групі немає ні одного кліпу</h4>
        {% endfor %}
    </div>
{% endblock %}
