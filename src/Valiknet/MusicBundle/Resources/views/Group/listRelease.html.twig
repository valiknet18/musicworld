{% extends 'ValiknetMusicBundle:Group:group_webber.html.twig' %}

{% block title %}
    Список кліпів групи {{ group.name }}
{% endblock %}

{% block links %}
    <a href="{{ path('valiknet_group_list') }}">Групи</a>><a href="{{ path("valiknet_group_view", { "slug" : group.slug }) }}">{{ group.name }}</a>><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">Релізи</a>
{% endblock %}

{% block group_content %}
    <div class="col-lg-2 col-lg-offset-10">
        <a href="{{ path('valiknet_group_release_add', {"slug" : group.slug}) }}">Додати реліз</a>
    </div>

    <div class="col-lg-12">
        {% for release in group.releases %}
            <div class="col-lg-12">
                <a href="{{ path('valiknet_group_release_view', { "slug" : group.slug, "slugRelease" : release.slug }) }}">{{ release.name }}</a>
            </div>
        {% else %}
            <h4>В цій групі немає ні одного релізу</h4>
        {% endfor %}
    </div>
{% endblock %}
