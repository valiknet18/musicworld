{% extends 'ValiknetMusicBundle:Group:group_webber.html.twig' %}

{% trans_default_domain "group" %}

{% block title %}
    {{ "groups.title.releasesGroup"|trans({"%groupName%" : group.name}) }}
{% endblock %}

{% block links %}
    {{ wo_render_breadcrumbs() }}
{% endblock %}

{% block group_content %}
    <div class="col-lg-2 col-lg-offset-10">
        <a href="{{ path('valiknet_group_release_add', {"slug" : group.slug}) }}">{{ "groups.releases.createRelease"|trans() }}</a>
    </div>

    <div class="col-lg-12">
        {% for release in group.releases %}
            <div class="col-lg-12">
                <a href="{{ path('valiknet_group_release_view', { "slug" : group.slug, "slugRelease" : release.slug }) }}">{{ release.name }}</a>
            </div>
        {% else %}
            <h4>В цій групі немає ні одного релізу</h4>
        {% endfor %}
    </div>
{% endblock %}
