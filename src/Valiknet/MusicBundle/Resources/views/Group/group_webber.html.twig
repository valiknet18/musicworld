{% extends '::base.html.twig' %}

{% trans_default_domain "group" %}

{% block content %}
    <div class="row col-lg-10 col-lg-offset-1">
        <nav class="navbar navbar-inverse">
            <ul class="nav navbar-nav">
                <li>
                    <a href="{{ path('valiknet_group_view', {"slug" : group.slug}) }}">
                        {{ "groups.navigator.informationAboutGroup"|trans }}
                    </a>
                </li>

                <li>
                    <a href="{{ path('valiknet_group_player_list', {"slug" : group.slug}) }}">
                        {{ "groups.navigator.users"|trans() }} <span class="badge">{{ group.users|length }}</span>
                    </a>
                </li>

                <li>
                    <a href="{{ path('valiknet_group_clip_list', {"slug" : group.slug}) }}">
                        {{ "groups.navigator.clips"|trans() }} <span class="badge">{{ group.clips|length }}</span>
                    </a>
                </li>

                <li>
                    <a href="{{ path('valiknet_group_release_list', {"slug" : group.slug}) }}">
                        {{ "groups.navigator.releases"|trans() }} <span class="badge">{{ group.releases|length }}</span>
                    </a>
                </li>

                <li>
                    <a href="{{ path('valiknet_group_news', {"slug" : group.slug}) }}">
                        {{ "groups.navigator.news"|trans() }} <span class="badge">{{ group.news|length }}</span>
                    </a>
                </li>

                <li>
                    <a href="{{ path('valiknet_group_contacts', {"slug" : group.slug}) }}">
                        {{ "groups.navigator.contacs"|trans() }}
                    </a>
                </li>
            </ul>
        </nav>

        <div class="col-lg-12 arrow-navigator">
            {% block links %}
            {% endblock %}
        </div>

        <div>
            {% block group_content %}
            {% endblock %}
        </div>
    </div>
{% endblock %}
