{% extends '::base.html.twig' %}

{% trans_default_domain "group" %}

{% block title %}
    {{ "groups.title.addRelease"|trans({"%groupName%" : group.name}) }}
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <form method="POST" action="#" enctype="multipart/form-data">
            <div class="col-lg-12">
                {{ form_row(form.poster) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.type) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.name) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.text) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.releasedAt) }}
            </div>

            <div>
                {{ form_label(form.tracks) }}
                <ul class="tracks" data-prototype="{{ form_widget(form.tracks.vars.prototype)|e }}">

                </ul>
            </div>

            <div class="col-lg-12">
                {{ form_rest(form) }}
            </div>

            <div class="col-lg-12">
                <button type="submit" class="btn btn-default">{{ "groups.form.createButton"|trans() }}</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/valiknetmusic/js/collection_track.js') }}"></script>
{% endblock %}
