{% extends '::base.html.twig' %}

{% block content %}
    <div class="row col-lg-10 col-lg-offset-1">
        <nav class="navbar navbar-inverse">
            <ul class="nav navbar-nav">
                <li>
                    <a href="{{ path('valiknet_user_view', {"slug" : user.slug}) }}">
                        Інформація про людину
                    </a>
                </li>

                <li>
                    <a href="{{ path('valiknet_user_groups_list', {"slug" : user.slug}) }}">
                        Групи <span class="badge">{{ user.groups|length }}</span>
                    </a>
                </li>

                <li>
                    <a href="{{ path('valiknet_user_news_list', {"slug" : user.slug}) }}">
                        Новини <span class="badge">{{ user.news|length }}</span>
                    </a>
                </li>

                <li>
                    <a href="{{ path('valiknet_user_contacts', {"slug" : user.slug}) }}">
                        Контакти
                    </a>
                </li>
            </ul>
        </nav>

        <div class="col-lg-12 arrow-navigator">
            {% block links %}
            {% endblock %}
        </div>

        <div>
            {% block user_content %}
            {% endblock %}
        </div>
    </div>
{% endblock %}
