{% extends '@ValiknetMusic/User/user_webber.html.twig' %}

{% block title %}
    Групи в яких приймає участь {{ user.name }} {{ user.lastname }}
{% endblock %}

{% block links %}
    <a href="{{ path('valiknet_user_list') }}">Люди</a>><a href="{{ path("valiknet_user_view", { "slug" : user.slug }) }}">{{ user.name }} {{ user.lastname }}</a>><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">Новини</a>
{% endblock %}

{% block user_content %}
    {% for article in user.news %}
        <div class="col-lg-6 thumbnail">
            <h3 class="col-lg-12">
                {{ article.name }}
            </h3>

            <div class="col-lg-12">
                <p>
                    {{ article.text|slice(0, 60) }}
                </p>
            </div>

            <div class="col-lg-12">
                <a href="{{ path('valiknet_article_view', {"slug" : article.slug}) }}" class="btn btn-success">
                    Перейти
                </a>
            </div>
        </div>
    {% else %}
        <div class="col-lg-12">
            <h4>
                До цієї людини не прив’язана ні одна стаття
            </h4>
        </div>
    {% endfor %}
{% endblock %}