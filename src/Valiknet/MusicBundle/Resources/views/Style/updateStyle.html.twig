{% extends '::base.html.twig' %}

{% block title %}
    Редагування стилю {{ style.name }}
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <form action="#" method="POST" novalidate>
            <div class="col-lg-12">
                {{ form_row(form.parent) }}
            </div>

            <div class="col-lg-12">
                {{ form_row(form.name) }}
            </div>

            <div class="col-lg-12">
                {{ form_rest(form) }}
            </div>

            <div class="col-lg-12">
                <button type="submit">Додати стиль</button>
            </div>
        </form>
    </div>
{% endblock %}
