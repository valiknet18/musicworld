{% extends 'ValiknetMusicBundle:Style:style_webber.html.twig' %}

{% trans_default_domain "style" %}

{% block title %}
    {{ "styles.title.listGroups"|trans({"%styleName%" : style.name}) }}
{% endblock %}

{% block links %}
    <a href="{{ path('valiknet_style_list') }}">{{ "styles.styles"|trans() }}</a>><a href="{{ path('valiknet_style_children_list', {"slug" : style.slug}) }}">{{ style.name }}</a>><a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">{{ "styles.navigator.groups"|trans() }}</a>
{% endblock %}

{% block style_content %}
    <div class="col-lg-12">
        {% include "@ValiknetMusic/Group/blocks/listGroups.html.twig" with {"groups" : groups} %}
    </div>
{% endblock %}
