{% extends 'ValiknetMusicBundle:Style:style_webber.html.twig' %}

{% trans_default_domain "style" %}

{% block title %}
    {{ "styles.title.childrenStyle"|trans({"%styleName%" : style.name}) }}
{% endblock %}

{% block links %}
    {{ wo_render_breadcrumbs() }}
{% endblock %}

{% block style_content %}
    <div class="col-lg-12">
        {% if style.children|length > 0 %}
            <ul>
                {% for style in style.children %}
                    <li>
                        <a href="{{ path('valiknet_style_children_list', {"slug" : style.slug}) }}">{{ style.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <div class="col-lg-12">
                <h4>
                    {{ "styles.childrenStylesNotIsset"|trans() }}
                </h4>
            </div>
        {% endif %}
    </div>
{% endblock %}
