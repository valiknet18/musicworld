{% extends '::base.html.twig' %}

{% block title %}
    Список країн
{% endblock %}

{% block content %}
    <div class="col-lg-12 arrow-navigator">
        <a href="{{ path('valiknet_country_list') }}">Країни</a>
    </div>

    <div class="col-lg-2 col-lg-offset-10">
        <a href="{{ path('valiknet_country_create') }}">Додати країну</a>
    </div>

    <div class="row col-lg-12">
        <ul>
            {% for country in countries %}
                <li>
                    <a href="{{ path("valiknet_country_group_view", {"slug" : country.slug}) }}">{{ country.name }}</a>
                </li>
            {% endfor %}
        </ul>

        <div class="col-lg-12">
            {{ knp_pagination_render(countries) }}
        </div>
    </div>
{% endblock %}
