{% extends '::base.html.twig' %}

{% trans_default_domain "country" %}

{% block title %}
    {{ "countries.title.listCountry"|trans() }}
{% endblock %}

{% block content %}
    <div class="col-lg-12 arrow-navigator">
        {{ wo_render_breadcrumbs() }}
    </div>

    <div class="col-lg-2 col-lg-offset-10">
        <a href="{{ path('valiknet_country_create') }}">{{ "countries.createCountry"|trans() }}</a>
    </div>

    <div class="row col-lg-12">
        <ul>
            {% for country in countries %}
                <li>
                    <div class="col-lg-4">
                        <a href="{{ path("valiknet_country_group_view", {"slug" : country.slug}) }}">{{ country.name }}</a>
                    </div>

                    <div class="col-lg-8">
                        <a href="{{ path("valiknet_country_update", {"slug" : country.slug}) }}">{{ "countries.updateCountry"|trans() }}</a>
                    </div>
                </li>
            {% else %}
                <div class="col-lg-12">
                    <h4>{{ "countries.notHasRecord"|trans() }}</h4>
                </div>
            {% endfor %}
        </ul>

        <div class="col-lg-12">
            {{ knp_pagination_render(countries) }}
        </div>
    </div>
{% endblock %}
