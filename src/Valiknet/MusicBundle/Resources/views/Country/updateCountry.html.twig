{% extends '::base.html.twig' %}

{% trans_default_domain "country" %}

{% block title %}
    {{ "countries.title.updateCountry"|trans({"countryName" : country.name}) }}
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <form action="#" method="POST">
            <div class="col-lg-12">
                {{ form_row(form.name) }}
            </div>

            <div class="col-lg-12">
                {{ form_rest(form) }}
            </div>

            <div class="col-lg-12">
                <button type="submit" class="btn btn-default">{{ "countries.form.updateCountryButton"|trans() }}</button>
            </div>
        </form>
    </div>
{% endblock %}
